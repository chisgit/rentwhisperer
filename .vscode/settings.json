{
  // Enable VS Code settings for this workspace
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  // Enable rules and agent components for your workflow
  "rules.enabled": true,
  "agent.enabled": true,
  // Additional recommended settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript", "typescriptreact"],
  "files.autoSave": "onFocusChange"
}
